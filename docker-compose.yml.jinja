services:

    postgres:
        image: postgres:18
        environment:
            - POSTGRES_USER=postgres
            - POSTGRES_PASSWORD=postgres
            - POSTGRES_DB={{ project_name }}
        # Uncomment these lines to persist data on the local filesystem.
        #     - PGDATA=/var/lib/postgresql/data/pgdata
        # volumes:
        #     - ./pgdata:/var/lib/postgresql/data/pgdata
    backend:
        build:
            context: .
            dockerfile: ./backend/Dockerfile
        restart: always
        command: uv run python backend/main.py
        depends_on:
            - postgres
    
    api:
        build:
            context: .
            dockerfile: ./api/Dockerfile
        restart: always
        command: uv run fastapi dev --host 0.0.0.0 api/main.py
        depends_on:
            - postgres
            - backend
        ports:
            - 8000:8000